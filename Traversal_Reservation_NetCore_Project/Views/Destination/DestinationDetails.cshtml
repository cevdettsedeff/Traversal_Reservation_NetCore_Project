@model EntityLayer.Concrete.Destination

@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!doctype html>
<html lang="zxx">

<body>

  <!-- about breadcrumb -->
  <section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
      <div class="container">
        <h2 class="title">Tur Detayları</h2>
        <ul class="breadcrumbs-custom-path mt-2">
          <li><a href="#url">Ana Sayfa</a></li>
          <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rehberin Yorumları </li>
        </ul>
      </div>
    </div>
  </section>
  <!-- //about breadcrumb -->
  <!--/blog-->
  <div class="py-5 w3l-homeblock1 text-center">
    <div class="container mt-md-4">
        <h3 class="blog-desc-big text-center mb-4">@Model.Description&hellip;</h3>
        <p> Yetkin rehberlerimizle en güncel seyahat hikayelerimizi okuyabilir ve yorumlarınızı bizlerle paylaşabilirsiniz &hearts;</p>
        <br />
        <div class="py-2 w3l-homeblock1 text-center">
            <div class="blog-post-img">
                <a href="#"><img src="@Model.Guide.Image" alt="" class="rounded-circle img-fluid" style="height:75px; width:75px;" /></a>
            </div>
            
            <div class="blog-post-info">
                <div class="author align-items-center mb-1">
                   Rehber: <a href="#"> @Model.Guide.Name</a><br /> Tur Rotaları: <a href="#url">@Model.Guide.Description</a>
                </div>
                <ul class="blog-meta">
                    <li class="meta-item blog-lesson">
                        <span class="meta-value"> @(((DateTime)Model.Date).ToString("dd-MMM-yyyy")) </span>
                    </li>
                   
                </ul>
            </div>
        </div>
    </div>
</div> 
<section class="blog-post-main w3l-homeblock1">
    <!--/blog-post-->
    <div class="blog-content-inf pb-5">
        <div class="container pb-lg-4">
            <div class="single-post-image">
                <div class="post-content">
                    <img src="@Model.CoverImage" class="radius-image img-fluid mb-5" alt="" />
                </div>
            </div>
            <div class="single-post-content">
                <h1>@Model.City</h1>
                <br />
                <p>&rArr; @Model.Details1</p>

                <blockquote class="blockquote my-5">
                    <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
                    @Model.Description
                    <footer class="blockquote-footer mt-3">
                        @Model.Guide.Name</footer>
                </blockquote>

                <div class="sing-post-thumb mb-5 row pt-3">
                    <div class="col-sm-6">
                        <a href="#url"><img src="@Model.Image2" class="img-fluid radius-image" style="width:400px; height:300px" alt=""></a>
                    </div>
                    <div class="col-sm-6 mt-sm-0 mt-3">
                        <a href="#url"><img src="@Model.Image" class="img-fluid radius-image" style="width:400px; height:300px" alt=""></a>
                    </div>
                </div>
                <h3 class="blog-desc-big m-0 mb-lg-4 mb-3">Peki Neden @Model.City?</h3>
                <p class="mb-4">
                   &rArr; @Model.Details2    
                </p>
                

                <div class="d-grid left-right mt-5 pb-md-5">
                    <div class="buttons-singles tags">
                        <h4>Tags :</h4>
                        <a href="#blog-tag">Gezi</a>
                        <a href="#blog-tag">Kültür</a>
                        <a href="#blog-tag">Otel</a>
                        <a href="#blog-tag">Yemek</a>
                    </div>
                    <div class="buttons-singles">
                        <h4>Share :</h4>
                        <a href="#blog-share"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-google-plus" aria-hidden="true"></span></a>
                        <a href="#blog-share"><span class="fa fa-pinterest-p" aria-hidden="true"></span></a>
                    </div>
                </div>
                
                 <div class="author-card mt-5">
                    <div class="row align-items-center">
                        <div class="col-sm-3 col-6">
                            <div>
                                <img src="@Model.Guide.Image" alt="" class="rounded-circle img-fluid">
                            </div>
                        </div>
                        <div class="col-sm-9 mt-sm-0 mt-3">
                            <h3 class="mb-3 title">@Model.Guide.Name</h3>
                            <p> @Model.Guide.LongDescription</p>
                            <ul class="author-icons mt-4">
                               
                                <li><a class="twitter" href="@Model.Guide.TwitterUrl"><span class="fa fa-twitter"
                                            aria-hidden="true"></span></a></li>

                                <li><a class="instagram" href="@Model.Guide.InstagramUrl"><span class="fa fa-instagram"
                                            aria-hidden="true"></span></a></li>

                                <li><a class="linkedin" href="@Model.Guide.LinkedinUrl"><span class="fa fa-linkedin"
                                            aria-hidden="true"></span></a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>

                
                    @*@await Component.InvokeAsync("_GuideDetails")*@
                


                    @await Component.InvokeAsync("_CommentListPartial",new {id = ViewBag.id})


                    @await Html.PartialAsync("~/Views/Comment/AddComment.cshtml", new {id = ViewBag.destID})
            </div>
        </div>
        <!--//blog-post-->
        </div>
</section>

 

</body>

</html>