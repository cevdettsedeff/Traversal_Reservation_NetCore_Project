
@using EntityLayer.Concrete
@model List<AppUser> 

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Kullanıcı Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>
        <th>Rol İşlemleri</th>
    </tr>
    @foreach (var item in Model)
    {
            <tr>

            @{
                count = count + 1;
            }
                <td>@count</td>
                <td>@item.Name @item.Surname</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                 
                <td><a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-outline-danger"  onclick="return confirm('Silmek istediğinden emin misin?')">Sil</a></td>
                <td><a href="/Admin/User/EditUser/@item.Id" class="btn btn-outline-success">Düzenle</a></td>
                <td><a href="/Admin/User/CommentUser/@item.Id" class="btn btn-outline-info">Yorumlar</a></td>
                <td><a href="/Admin/User/ReservationUser/@item.Id" class="btn btn-outline-secondary">Tur Geçmişi</a></td>
                    <td><a href="/Admin/Role/AssignRole/@item.Id" class="btn btn-outline-warning">Rol Ata</a></td>
            </tr>
    }
</table>

            <a href="/Login/SignUp/" class="btn btn-outline-primary">Yeni Kullanıcı Kaydı</a>


 <script>
       function clicked(e) {
            if (!confirm('Silmek istediğinizden emin misiniz?')) {
                e.preventDefault();
            }
        }
    </script> 
